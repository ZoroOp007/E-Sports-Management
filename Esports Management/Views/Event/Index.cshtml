@model IEnumerable<Esports_Management.Models.EventModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/NewIndex.css" />
</head>

<div class="main-search"><input type="text" placeholder="Search ....."><div class="fa-solid fa-magnifying-glass" id="search-logo"></div></div>

<div class="head-container">
    <h1 id="heading">Event</h1>
    <p style="color:green;font-size:1.2rem" id="msg">
        @TempData["msg"]
    </p>
    <div class="Add"><a asp-action="Create">Add Event</a></div>
</div>
<hr />

<div class="My-table">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.E_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Venue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sport)
                </th>

                @if (User.IsInRole("Admin"))
                {
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>

                }
                <th></th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.E_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sport.Sp_Name)
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem =>item.CreatedBy)
                        </td>
                    }


                    <td class="action">
                        <a asp-action="Edit" asp-route-id="@item.EId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



