@model Esports_Management.Models.EventModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/NewCreate.css" />
</head>

<div class="main-search"><input type="text" placeholder="Search ....."><div class="fa-solid fa-magnifying-glass" id="search-logo"></div></div>

<div class="Contain">
    <div class="head">
        @*<h1 style="color:rgb(0,155,0)">Create</h1>*@

        <h4 style="color:cornflowerblue">New Event</h4>
    </div>
    <hr />


    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="E_Name" class="control-label"></label><br />
                    <input asp-for="E_Name" class="form-control" required />
                    <span asp-validation-for="E_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue" class="control-label"></label><br />
                    <input asp-for="Venue" class="form-control" required />
                    <span asp-validation-for="Venue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverPhoto" class="control-label"></label><br />

                    <div class="custom-file">
                        <input asp-for="CoverPhoto" class="custom-file-input" id="customFile" required />
                        <label class="custom-file-label" for="customFile">Choose File</label>
                    </div>

                    <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label"></label><br />
                    <input asp-for="DateTime" class="form-control" required />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SId" class="control-label"></label><br />
                    <select asp-for="SId" class="form-control" required>
                        <option value="">Select</option>
                        @foreach (var items in ViewBag.Sport)
                        {
                            <option value="@items.SId">@items.Sp_Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedBy" class="control-label"></label><br />
                    <input asp-for="CreatedBy" class="form-control" readonly value="@User.Identity.Name" />
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn-primary" />
                </div>
            </form>
        </div>
        <div class="link">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>




</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

