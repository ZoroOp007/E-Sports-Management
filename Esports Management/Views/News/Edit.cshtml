@model Esports_Management.Models.NewsModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/Create.css" />
</head>

<div class="main-search"><input type="text" placeholder="Search ....."><div class="fa-solid fa-magnifying-glass" id="search-logo"></div></div>

@*h1>Edit</h1>*@<
    <div class="contain">
        <div class="head-contain">
        <div><h4>Edit News</h4></div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
        </div>
<h4>Edit News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notice_Id" />
            <div class="form-group">
                <label asp-for="Notice_Code" class="control-label"></label>
                <input asp-for="Notice_Code" class="form-control" />
                <span asp-validation-for="Notice_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="image_path" class="control-label"></label>
                <input asp-for="image_path" class="form-control" />
                <span asp-validation-for="image_path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notice_Date" class="control-label"></label>
                <input asp-for="Notice_Date" class="form-control" />
                <span asp-validation-for="Notice_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EId" class="control-label"></label>
                <select asp-for="EId" class="form-control" asp-items="ViewBag.EId"></select>
                <span asp-validation-for="EId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
