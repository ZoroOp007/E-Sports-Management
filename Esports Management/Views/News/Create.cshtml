@model Esports_Management.Models.NewsModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-search"><input type="text" placeholder="Search ....."><div class="fa-solid fa-magnifying-glass" id="search-logo"></div></div>

<div class="contain">
    <div class="head"><h4>New Notice</h4></div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Notice_Code" class="control-label"></label>
                <input asp-for="Notice_Code" class="form-control" />
                <span asp-validation-for="Notice_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notice_Date" class="control-label"></label>
                <input asp-for="Notice_Date" class="form-control" />
                <span asp-validation-for="Notice_Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NoticePdf" class="control-label"></label>

                <div class="custom-file">
                    <input asp-for="NoticePdf" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose File</label>
                </div>

                <span asp-validation-for="NoticePdf" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EId" class="control-label"></label>
                <select asp-for="EId" class="form-control">
                    <option value="">Select</option>
                    @foreach (var items in ViewBag.Events)
                    {
                        <option value="@items.EId">@items.E_Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

