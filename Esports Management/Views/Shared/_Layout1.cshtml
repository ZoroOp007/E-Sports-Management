<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Management</title>

    <link rel="stylesheet" href="~/css/Layout2.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <div class="container">
        <div class="aside">
            <div class="aside-head">
                <div class="logo">
                    <img id="im" src="~/Images/logo.jfif" />
                </div>
                <div class="logo-name"><a href="#"><pre><i class="bi bi-building"></i>@User.Identity.Name</pre></a></div>
            </div>
            <hr>
            <div class="aside-nav">
                <div class="aside-nav-link">
                    <div class="aside-nav-link-name"> <a asp-controller="Dashboard" asp-action="Index"><pre><i class="bi bi-columns-gap"></i>  Dashboard</pre></a></div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="aside-nav-link-name"> <a asp-controller="User" asp-action="Index"> <pre><i class="bi bi-person-lines-fill"></i>  Users</pre></a></div>
                    }
                    <div class="aside-nav-link-name"> <a asp-controller="Event" asp-action="Index"> <pre><i class="bi bi-clipboard-check"></i>  Events</pre></a></div>

                    <div class="aside-nav-link-name"> <a asp-controller="News" asp-action="Index"> <pre><i class="bi bi-bell"></i>  News</pre></a></div>

                    <div class="aside-nav-link-name"> <a asp-controller="Sport" asp-action="Index"> <pre><i class="fas fa-futbol"></i>  Sport</pre></a></div>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="aside-nav-link-name"> <a asp-controller="Organizer" asp-action="Index"> <pre><i class="bi bi-award">  </i>College</pre></a></div>
                    }

                    <div class="aside-nav-link-name"> <a asp-controller="Result" asp-action="Index"> <pre><i class="bi bi-trophy">  </i>Result</pre></a></div>
                </div>


                <p style="position:absolute;bottom:20px;color:white"> &#169 Copyright 2023</p>
            </div>
        </div>

        <div class="main">


            <div class="main-top">

                <div class="main-logout"><button>Log out</button></div>
            </div>

            <div class="main-render">
                @RenderBody()
            </div>

            <div class="contact newContact"><i class="bi bi-headset"> </i> <pre>  </pre><a href="#">Support</a></div>

        </div>

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>

