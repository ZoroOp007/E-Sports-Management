@model Esports_Management.Models.ResultModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-search"><input type="text" placeholder="Search ....."><div class="fa-solid fa-magnifying-glass" id="search-logo"></div></div>

<div class="contain">
    <div class="head"><h4> New Result</h4></div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EId" class="control-label"></label>
                <select asp-for =EId class ="form-control">
                    <option value="">Select</option>
                    @foreach(var items in ViewBag.Events)
                    {
                        <option value="@items.EId">@items.E_Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Player1_Id" class="control-label"></label>
                <input asp-for="Player1_Id" class="form-control" />
                <span asp-validation-for="Player1_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score1" class="control-label"></label>
                <input asp-for="Score1" class="form-control" />
                <span asp-validation-for="Score1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player2_Id" class="control-label"></label>
                <input asp-for="Player2_Id" class="form-control" />
                <span asp-validation-for="Player2_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score2" class="control-label"></label>
                <input asp-for="Score2" class="form-control" />
                <span asp-validation-for="Score2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Winner" class="control-label"></label>
                <input asp-for="Winner" class="form-control" />
                <span asp-validation-for="Winner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
